
<div class="row">
	<div class="col-md-8 col-md-offset-2">
			<% if @indexingStatus == 'success' %>
	
				<div class="alert alert-success">
					<h3 class="text-center">Indexing succeded!</h3>
					<%= @index %>
				</div>
			<% end %>

			<% if @indexingStatus == 'failure' %>
				<div class="alert alert-danger">
					<h3 class="text-center">Hmm! Something went wrong.</h3>
				</div>
			<% end %>

		<div class="jumbotron">
			<h3>Upload XML file to index data using Algolia API:</h3>
			<br>		
			
			<div class="row">
				<div class="col-md-10">
					<%= form_tag '/import', { :multipart => true } do %>

					<div class="form-group">
						<label for="xmlFile" />
						<%= file_field_tag 'upload[xml]', class: "form-control", placeholder: 'Choose an xml file to upload' %>
					</div>

					<%= submit_tag "Upload", class: "btn btn-default pull-right" %>

					<% end %>
				</div> 
			</div>



		</div>
	</div>
</div>

